<h1>Listing forums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Question</th>
      <th>Tags</th>
      <th>Inquirer</th>
      <% if is_admin? %><th></th><% end %>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= link_to forum.title, forum %></td>
        <td><%= forum.question %></td>
        <td><%= forum.tags %></td>
        <td>Posted by <%= find_user(@users, forum.user_id).user_name %> <%= time_ago_in_words(forum.created_at) %> ago</td>
        <% if is_admin? %>
            <td>
                <%= link_to 'Edit', edit_forum_path(forum) %>&nbsp;/&nbsp;
                <%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        <% end %>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Forum', new_forum_path %>
