<h2>Welcome to codeSpork!</h2>

<div class="innerContainer">
<% if @info[:changelogs].count != 0 %>
  <table>
    <caption>Recent Changes:</caption>
    <thead>
    <tr>
      <th>Admin</th>
      <th>Changes</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @info[:changelogs].each do |changelog| %>
        <tr>
          <td><%= changelog.user %></td>
          <td><%= changelog.content %></td>
          <td><%= changelog.date %></td>
          <% if is_admin? %>
              <td><%= link_to 'Edit', edit_changelog_path(changelog) %>&nbsp;/&nbsp;<%= link_to 'Destroy', changelog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          </tr>
    <% end %>
    </tbody>
  </table>
  <br>
  <% if is_admin? %>
    <%= link_to 'See Changelogs', changelogs_path %>
  <% end %>
<% else %>
  <h3>No Changes have been posted yet.</h3>
  <% if is_admin? %>
      <%= link_to 'See Changelogs', changelogs_path %>
  <% end %>
<% end %>
  <br>
  <% if @info[:forums].count != 0 %>
      <table>
        <thead>
        <tr>
          <th>Title</th>
          <th>Replies</th>
          <th>Tags</th>
          <th>Inquirer</th>
          <% if is_admin? %><th></th><% end %>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @info[:forums][:html].each do |forum| %>
            <tr>
              <td><%= link_to forum.title, forum %></td>
              <td><%= forum.replies.count %></td>
              <td><%= forum.tags %></td>
              <% if forum.replies.count != 0 %>
                  <td>Reply by <%= find_user(@info[:users], forum.replies.last.user_id).user_name %> <%= time_ago_in_words(forum.replies.last.created_at) %> ago</td>
              <% else %>
                  <td>Posted by <%= find_user(@info[:users], forum.user_id).user_name %> <%= time_ago_in_words(forum.created_at) %> ago</td>
              <% end %>

              <% if is_admin? %>
                  <td><%= link_to 'Edit', edit_forum_path(forum) %>&nbsp;/&nbsp;<%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
              <td></td>
            </tr>
        <% end %>
        </tbody>
      </table>
  <% else %>
      <h3>No Posts have been made yet.</h3>
  <% end %>

  <br>
  <%= link_to 'See Forums', forums_path %>
</div>


