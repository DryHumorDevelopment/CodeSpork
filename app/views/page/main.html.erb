<h2>Welcome to codeSpork!</h2>

<div class="innerContainer">
<% if @info[:changelogs].count != 0 %>
  <table>
    <caption>Recent Changes:</caption>
    <thead>
    <tr>
      <th>Admin</th>
      <th>Changes</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @info[:changelogs].each do |changelog| %>
        <tr>
          <td><%= changelog.user %></td>
          <td><%= changelog.content %></td>
          <td><%= changelog.date %></td>
          <% if is_admin? %>
              <td><%= link_to 'Edit', edit_changelog_path(changelog) %>&nbsp;/&nbsp;<%= link_to 'Destroy', changelog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
          </tr>
    <% end %>
    </tbody>
  </table>
  <br>
  <% if is_admin? %>
    <%= link_to 'See Changelogs', changelogs_path %>
  <% end %>
<% else %>
  <h3>No Changes have been posted yet.</h3>
  <% if is_admin? %>
      <%= link_to 'See Changelogs', changelogs_path %>
  <% end %>
<% end %>
  <br>

  <div id="tabs">
    <ul>
      <li><a href="#all">ALL</a></li>
      <li><a href="#html">HTML</a></li>
      <li><a href="#responsive">Responsive</a></li>
      <li><a href="#vb">VB.NET</a></li>
      <li><a href="#csharp">C#</a></li>
      <li><a href="#asp">ASP.NET</a></li>
      <li><a href="#rb">RUBY</a></li>
      <li><a href="#rails">RAILS</a></li>
      <li><a href="#php">PHP</a></li>
      <li><a href="#js">JS</a></li>
      <li><a href="#jq">jQuery</a></li>
      <li><a href="#mobile">MOBILE</a></li>
    </ul>
    <% users = @info[:users] %>
    <% @info[:forums].each_pair do |name, value| %>
        <div id="<%= name.to_s %>">
          <%= render partial: "page/recentqa", locals: {info: value, users: users} %>
        </div>
    <% end %>
  </div>
  <div class="right"><%= link_to 'See Forums', forums_path %></div>
</div>


